<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>ServletDashboard</servlet-name>
		<servlet-class>com.excilys.formation.computerdb.servlets.ServletDashboard</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletAdd</servlet-name>
		<servlet-class>com.excilys.formation.computerdb.servlets.ServletAddComputer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletEdit</servlet-name>
		<servlet-class>com.excilys.formation.computerdb.servlets.ServletEditComputer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletSearch</servlet-name>
		<servlet-class>com.excilys.formation.computerdb.servlets.ServletSearch</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ServletDashboard</servlet-name>
		<url-pattern>/access</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletAdd</servlet-name>
		<url-pattern>/access/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletEdit</servlet-name>
		<url-pattern>/access/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletSearch</servlet-name>
		<url-pattern>/access/search</url-pattern>
	</servlet-mapping>
	
</web-app>